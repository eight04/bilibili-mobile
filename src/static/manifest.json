{
	"manifest_version": 2,
	"version": "0.3.0",
	"name": "__MSG_extensionName__",
	"description": "__MSG_extensionDescription__",
	"author": "eight",
	"homepage_url": "https://github.com/eight04/bilibili-mobile",
	"permissions": [
    "https://*.bilibili.com/*",
    "https://*.bilivideo.com/*",
    "webRequest",
    "webRequestBlocking"
	],
	"optional_permissions": [
	],
	"background": {
		"scripts": []
	},
	"content_scripts": [
		{
			"matches": [
				"https://*.bilibili.com/*"
			],
			"js": [],
      "css": [
        "css/common.css"
      ],
			"run_at": "document_start",
      "world": "MAIN"
		}
	],
	"default_locale": "en"
}
