		{
			"matches": [
				"https://*.bilibili.com/*",
        "https://*.bilivideo.com/*"
			],
			"js": [],
      "css": [
        "css/common.css"
      ],
			"run_at": "document_start"
		},
    {
      "matches": [
        "https://*.bilibili.com/*",
        "https://*.bilivideo.com/*"
      ],
      "js": [
      ],
      "run_at": "document_start",
      "world": "MAIN"
    }
	],
	"default_locale": "en"
}
