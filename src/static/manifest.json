{
	"manifest_version": 2,
	"version": "0.4.0",
	"name": "__MSG_extensionName__",
	"description": "__MSG_extensionDescription__",
	"author": "eight",
	"homepage_url": "https://github.com/eight04/bilibili-mobile",
	"permissions": [
    "https://*.bilibili.com/*",
    "https://*.bilivideo.com/*",
    "webNavigation",
